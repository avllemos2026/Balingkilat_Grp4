            alert(event.target.innerHTML);
        }
        function clear() {
            var w = document.getElementById("txtWord").value;
            document.getElementById("txtWord").value = "";
            document.getElementById("lttrO").disabled = false;
            document.getElementById("lttrS").disabled = false;
            document.getElementById("lttrE").disabled = false;
            document.getElementById("lttrR").disabled = false;
            document.getElementById("lttrP").disabled = false;
